<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_digi" />

    <ImageView
        android:id="@+id/logo_1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/txtdigiteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DigiTeam"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="100dp"
        android:textSize="15sp"
        android:textColor="@color/NeutralGray_900"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtDigital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digital Together Everyone Achieve More"
        android:textColor="@color/NeutralGray_600"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/txtdigiteam"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtjabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jabar Digital Service"
        android:layout_below="@id/txtDigital"
        android:layout_marginLeft="100dp"
        android:textColor="@color/NeutralGray_600"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/logo_2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/txtDias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dias Eka Fredianto, S.Kom,B.IT"
        android:outlineAmbientShadowColor="@color/NeutralGray_900"
        android:textColor="@color/black"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="70dp" />

    <TextView
        android:id="@+id/txtUI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UI Designer"
        android:layout_below="@id/txtDias"
        android:layout_marginLeft="70dp"
        android:textColor="@color/NeutralGray_600"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="392dp"
        android:layout_height="521dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="210dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:padding="20dp">

        <ScrollView
            android:layout_width="358dp"
            android:layout_height="501dp"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/txtJam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Jam Kerja Bulan Ini"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtjamkerja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Jam kerja kamu bulan ini: 130.53 Jam"
                    android:textColor="@color/PrimerBlue_900"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnjam"
                    android:layout_width="327dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_130" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="-33dp"
                    android:text="130.53 JAM"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtbatas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Batas Minimum Jam Kerja 170jam/bulan"
                    android:textColor="@color/NeutralGray_600" />

                <TextView
                    android:id="@+id/btncheckin"
                    android:layout_width="327dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_chekin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="-30dp"
                    android:text="Checkin"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laporan Kamu"
                    android:background="@drawable/btn_laporan"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:textSize="20sp"/>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>